{
    "name": "derrabus/twitter-signin-bundle",
    "description": "An implementation of the \"Sign in with Twitter\" workflow.",
    "keywords": ["twitter"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander M. Turek",
            "email": "me@derrabus.de"
        }
    ],
    "require": {
        "ext-curl": "*",
        "symfony/config": "~2.1",
        "symfony/dependency-injection": "~2.1",
        "symfony/http-foundation": "~2.1",
        "symfony/http-kernel": "~2.1",
        "symfony/routing": "~2.1",
        "guzzle/http": "~3.8",
        "guzzle/plugin-oauth": "~3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "guzzle/plugin-mock": "~3.8"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": { "Rabus\\Bundle\\Twitter\\SignInBundle\\": "" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3.x-dev"
        }
    }
}
